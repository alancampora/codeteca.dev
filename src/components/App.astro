---
import type { CodetecaApp } from "../../data/apps";

const { name, description, status, tags} = Astro.props as CodetecaApp;

const statusLabel = (s?: CodetecaApp["status"]) =>
  s === "active" ? "Active" : s === "wip" ? "WIP" : s === "archived" ? "Archived" : "App";
---

<article class="app-card font-geist">
  <header class="head">
      <p class="title">{name}</p>
  <ul class="tags font-codelatin">
    {tags.map(tag => <li class="tag">{tag}</li>)}
    </ul>
  </header>

  <section>
      <p class="desc">{description}</p>
  </section>

  <footer> 
    <span class="pill">{statusLabel(status)}</span>
  </footer>
</article>


<style>

  .tags {
    list-style: none;
    justify-content: center;
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    padding:0;
  }

  .tag {
    padding: 5px;
    font-size: 0.8em;
    color: var(--muted);
    border: 1px solid var(--border);
    border-radius: 5px;
    
  }
 
  .app-card {
    --border: #e5e7eb;     /* neutral-200 */
    --text: #111827;       /* neutral-900 */
    --muted: #6b7280;      /* neutral-500 */
    --surface: #ffffff;
    --shadow: 0 8px 20px rgba(17, 24, 39, 0.08);
    --radius: 16px;

    margin: 1rem;
    background: var(--surface);
    color: var(--text);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 16px;
    display: grid;
    gap: 10px;
    box-shadow: var(--shadow);
    max-width: 500px;
  }

  .title {
    text-align: center;
    font-size: 2em;
    font-weight: 400;
    margin:0;
  }
</style>
