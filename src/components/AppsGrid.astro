---
import App from "../components/App.astro";
import {loadApps} from "./load-apps";

const appsMock = [
  {
    id: "arboleteca",
    name: "Arboleteca",
    description:
      "Mapa geoespacial para explorar árboles en la Ciudad de Buenos Aires. Fomentar el conocimiento y un poco de deporte al mismo tiempo",
    href: "/arboleteca",
    repo: "https://github.com/acampora/arboleteca",
    status: "active",
    tags: ["astro", "react", "node", "mongo", "geo"],
  },
  {
    id: "blogteca",
    name: "Blogteca",
    description: "Blog builder con MDX + diseño personalizable.",
    href: "/blogteca",
    repo: "https://github.com/tu-user/blogteca",
    status: "wip",
    tags: ["mdx", "next", "editor"],
  },
];

const apps = import.meta.env.DEV ? appsMock : await loadApps();
---

<div class="app-grid">
  {apps.map((app) => <App {...app} />)}
</div>

<style>
  .app-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: stretch;
  }

  @media screen and (max-width: 768px) {
    .app-grid {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
