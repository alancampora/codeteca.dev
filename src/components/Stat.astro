---
const { value, label } = Astro.props;
---
<div class="stat font-codelatin">
  <span class="stat-value">{value}</span>
  <span class="stat-label">{label}</span>
</div>

<style>
  .stat {
    background-color: var(--pink);
    min-width: 100px;
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: left;
    align-items: center;
    gap: 0.5rem;
  }
  .stat-value {
    font-size: 2em;
  }
  .stat-label {
    font-size: 1.15em;
  }
</style>
