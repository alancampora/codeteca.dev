---
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=M+PLUS+Code+Latin:wght@100..700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon-3.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Codeteca.dev</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  :global(:root) {
    --shadow: 0 8px 20px rgba(17, 24, 39, 0.08);
    --pink-strong: #ff00ca4d;
    --pink: #f4cfe4;
  }

  :global(.font-codelatin) {
    font-family: "M PLUS Code Latin", monospace;
    font-weight: 400;
  }

  :global(.font-geist) {
    font-family: "Geist", sans-serif;
    font-weight: 300;
  }

  :global(.title) {
    font-size: 3em;
  }

  :global(code) {
    display: inline-block;
    background:
      linear-gradient(66.77deg, #f3cddd 0%, #f5cee7 100%) padding-box,
      linear-gradient(155deg, #d83333 0%, #f041ff 18%, #f5cee7 45%) border-box;
    border-radius: 8px;
    border: 1px solid transparent;
    padding: 6px 8px;
  }

  :global(.markdown-content blockquote) {
    border-left: 4px solid var(--pink);
    background: #f8fafc;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    border-radius: 0 8px 8px 0;
  }

  :global(.markdown-content blockquote)::before {
  }

  :global(.markdown-content blockquote p) {
    margin: 0;
    color: #475569;
    font-style: italic;
  }

  :global(.markdown-content) {
    font-weight: 400;
    color: #4a4646;
    font-size: large;
    line-height: 1.5;
    word-break: break-word;
  }
  :global(.markdown-content .video-container) {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
  }

  :global(.markdown-content .video-container iframe) {
    width: 315px;
    height: 560px;
    border-radius: 12px;
    border: none;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  /* Responsive en mobile */
  @media (max-width: 768px) {
    :global(.markdown-content .video-container iframe) {
      width: 100%;
      max-width: 400px;
      height: auto;
      aspect-ratio: 9 / 16;
    }
  }

  :global(:root) {
    --shadow: 0 8px 20px rgba(17, 24, 39, 0.08);
    --pink-strong: #ff00ca4d;
    --pink: #f4cfe4;
  }

  </style>
